<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:KioskApp.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="FilterBackgroundStyle"
           TargetType="controls:BackgroundWithInnerShadow">
        <Setter Property="ShadowColor"
                Value="#383e90" />
        <Setter Property="ShadowOpacity"
                Value="0.56" />
        <Setter Property="BlurRadius"
                Value="5" />
        <Setter Property="Background"
                Value="#aaaddf" />
        <Setter Property="OuterBorderBrush"
                Value="#eeefff" />
        <Setter Property="OuterBorderThickness"
                Value="3" />
        <Setter Property="Height"
                Value="31" />
    </Style>

</ResourceDictionary>