<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:coreControls="using:KioskBrains.Kiosk.Core.Ui.Controls"
                    xmlns:controls="using:KioskApp.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Brushes.xaml" />
        <ResourceDictionary Source="../FontFamilies.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextInputStyle"
           TargetType="coreControls:TextInput">
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="TextMargin"
                Value="0 2 0 0" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Foreground"
                Value="#533c83" />
        <Setter Property="FontFamily"
                Value="{StaticResource UbuntuFontFamily}" />
        <Setter Property="FontSize"
                Value="26" />
        <Setter Property="Height"
                Value="35" />
    </Style>

    <Style x:Key="PhoneNumberInputStyle"
           TargetType="controls:PhoneNumberInput"
           BasedOn="{StaticResource TextInputStyle}" />

</ResourceDictionary>